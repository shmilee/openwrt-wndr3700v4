config dnsmasq
	option domainneeded	1
	option boguspriv	1
	option filterwin2k	0  # enable for dial on demand
	option localise_queries	1
	## 默认开启rebind保护, 是防止域名被指向内网地址(私有网络).
	## 将'1'改成'0', 不然10.10.0.21(私有网络)的结果就被丢弃了.
	option rebind_protection '0'  # disable if upstream must serve RFC1918 addresses
	option rebind_localhost 1  # enable for RBL checking and similar services
	#list rebind_domain example.lan  # whitelist RFC1918 responses for domains
	option local	'/lan/'
	option domain	'lan'
	option expandhosts	1
	option nonegcache	0
	option authoritative	1
	option readethers	1
	option leasefile	'/tmp/dhcp.leases'
	option resolvfile	'/tmp/resolv.conf.auto'
	option localservice	0  # disable to allow DNS requests from non-local subnets

config dhcp lan
	option interface	lan
	option start 	100
	option limit	15
	option leasetime	12h
	list dhcp_option '6,192.168.1.1'
	option dhcpv6 'hybrid'
	option ra 'hybrid'
	option ndp 'hybrid'

config dhcp wan
	option interface	wan
	option ignore	1
	option dhcpv6 'hybrid'
	option ra 'hybrid'
	option ndp 'hybrid'
	option master '1

